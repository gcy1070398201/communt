<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.exampl.communt.mapper.UserMapper">
    <insert id="insertUser" parameterType="com.exampl.communt.mode.User">
        insert into user_info
        (account_id,name,token,bio,avatar_url,gmt_create,gmt_modified)
        values (#{accountId},#{name},#{token},#{bio},#{avatarUrl},#{gmtCreate},#{gmtModified})
    </insert>
    <select id="findUserToken" parameterType="String" resultType="com.exampl.communt.mode.User">
        select * FROM user_info where token=#{token}
    </select>
    <select id="findUserId" parameterType="String" resultType="com.exampl.communt.mode.User">
        select * FROM user_info where id=#{id}
    </select>
    <select id="findAccountId" parameterType="String" resultType="com.exampl.communt.mode.User">
        select * FROM user_info where account_id=#{id}
    </select>
    <update id="createOrUpdate" parameterType="com.exampl.communt.mode.User">
    update user_info set token=#{token},bio=#{bio},gmt_modified=#{gmtModified},name=#{name}
    where id=#{id}
    </update>
</mapper>